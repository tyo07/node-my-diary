{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration":true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["dist/config/*"],
      "@routes/*": ["dist/routes/*"],
      "@controllers/*": ["dist/controllers/*"],
      "@helpers/*": ["dist/helpers/*"]
    },
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
